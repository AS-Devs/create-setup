{
  "name": "@susanta96/create-setup",
  "version": "0.0.1",
  "description": "A CLI to bootstrap new vite-based TypeScript projects",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "@susanta96/create-setup": "dist/index.js",
    "create-setup": "dist/index.js"
  },
  "scripts": {
    "lint": "prettier . --check && eslint . --cache",
    "format": "prettier . --write && eslint . --cache --fix",
    "build": "node ./esbuild.mjs",
    "dev": "pnpm build && node dist/index.js",
    "playground": "pnpm build && node playground.mjs",
    "release": "semantic-release"
  },
  "keywords": [
    "cli",
    "create-vite-ts",
    "create-react-app"
  ],
  "author": "AS Devs <hi@asdevs.dev>",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "channel": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "# Semantic Release Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist",
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "license": "ISC",
  "dependencies": {
    "colorette": "^2.0.20",
    "ejs": "^3.1.10",
    "execa": "^9.3.0",
    "inquirer": "^9.2.20",
    "listr": "^0.14.3",
    "pkg-install": "^1.0.0",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/listr": "^0.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nx": "19.4.1",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.8",
    "semantic-release": "^24.0.0",
    "typescript": "^5.5.3"
  }
}
